<UserControl x:Class="DataLogApp.Views.StartingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataLogApp.ViewModel"
             DataContext="{Binding Path=(local:MainViewModel)}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="40"/>
        <RowDefinition Height="40"/>
        <RowDefinition Height="40"/>
        <RowDefinition Height="40"/>
        <RowDefinition Height="40"/>
        <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="button" Grid.Row="1" Content="Idle" Command="{Binding IdleCommand}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75"/>

    </Grid>
</UserControl>
